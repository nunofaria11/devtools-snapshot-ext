{
	"name": "DevTools Snapshot Extension",
	"version": "1.0.0",
	"description": "A browser extension to save the current state of the DevTools panel.",
	"homepage_url": "https://github.com/nunofaria11/devtools-snapshot-ext",
	"manifest_version": 2,
	"minimum_chrome_version": "44",
	"devtools_page": "devtools.html",
	"icons": {
        "16": "icons/close_16.png",
        "32": "icons/close_32.png",
        "64": "icons/close_64.png"
    },
	"permissions": [
		"<all_urls>",
		"http://*/*",
        "https://*/*",
		"storage",
		"tabs",
		"activeTab",
		"downloads",
		"background",
		"storage"
	],
	"background": {
		"persistent": false,
		"scripts": [
			"browser-polyfill.min.js",
			"background.js"
		]
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": [
			"browser-polyfill.min.js",
			"content.js"
		],
		"run_at": "document_start"
	}],
	"web_accessible_resources": [
		"contentInject.js"
	]
}